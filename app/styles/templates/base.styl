@require "jeet"

html
  position relative
  min-height 100%
  
body
  padding 0px
  margin: 0 0 3em
  font-family 'Open Sans', sans-serif
  font-weight 300
  font-size 16px
  line-height 1.42857143
  background-color bg_color

footer
  position absolute
  left 0
  bottom 0
  height 3em
  width 100%
  background-color bg_accent
  color #93a1a1
  text-align center
  line-height 300%
    
h1, h2, h3, h4, h5, h6
  color #b58900
  font-weight 300
  line-height 1.1

p
  line-height 1.4737
  font-stretch normal
  font-style normal
  font-variant normal
  
b
  font-weight 900

a
  &:hover
    background: #fafafa;
  color: #3498db;
  text-decoration: none;
  -webkit-transition: all 0.25s ease-in;
  -moz-transition: all 0.25s ease-in;
  -ms-transition: all 0.25s ease-in;
  transition: all 0.25s ease-in;
  border-radius: 7px;
  padding: 1px 3px 3px 3px;
  
.container
  margin-right auto
  margin-left auto
  padding 15px
  
.title
  text-align center
  line-height 1.5em
  
.highlight
  margin 10px
  padding 1em 0em 1em 1em
  @extend .material-shadow
   
.communicator-quote
  background-color white
  padding 1em
  border-radius 4px
  border 1px solid rgba(255, 255, 255, 0.75)
  @extend .card-shadow
  p
    margin-top 0px
  
//@media (min-width sm_size)
    
@media (min-width md_size)
  .container
    padding 2.618em
  .entry-avatar
    column(1/3)
    text-align right
  .entry-desc
    column(2/3)


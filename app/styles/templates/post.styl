.post-all-center
  text-align center
  table
    margin-left auto
    margin-right auto

.post-width
  margin-left auto
  margin-right auto
  max-width md_size
  
.post
  margin auto
  h1#post-title
    font-weight 800
    text-align center
    font-size 5em
    margin-bottom 0px
  h1, h2, h3, p, ul, ol, #disqus_thread
    @extend .post-width
  h1, h2, h3
    max-width md_size + 50px 
    font-family 'Fjalla One',serif
    color #b58900
  article
    padding 2% 0%
  p
    line-height 2em
  .post-date
    color text_muted
  .post-series-desc
    color text_muted
    font-size 0.9em
    p, ul
      margin-top 0.5em
      margin-bottom 0.5em
  img
    max-width 100%
    border-radius 3px
    display block
    margin auto
    text-align center
  figcaption
    text-align center
    p
      font-style italic
  .video-player
    text-align center
  table
    th, td
      padding 0.5em
  thead
    background-color bg_accent 

.term-desc
  p
    margin-top 0px
    line-height 1.2em
    color text_muted

.cf
  cf()

@media (min-width md_size)
  .g2
    column(2/12)

  .g6
    column(6/12)

  .g8
    column(8/12)

.post
  margin auto
  h1#post-title
    font-weight 800
    text-align center
    font-size 5em
    margin-bottom 0px
  h1, h2, h3, p, ul, ol, #disqus_thread
    margin-left auto
    margin-right auto
    max-width md_size
  h1, h2, h3
    max-width md_size + 50px 
    font-family 'Fjalla One',serif
    color #b58900
  article
    padding 2% 0%
  p
    line-height 2em
  .post-date
    color text_muted
  .post-series-desc
    color text_muted
    font-size 0.9em
    p, ul
      margin-top 0.5em
      margin-bottom 0.5em
  img
    border-radius 3px
    display block
    margin auto
    text-align center
    @extend .card-shadow    
  .video-player
    text-align center

.term-desc
  p
    margin-top 0px
    line-height 1.2em
    color text_muted

.post
  margin auto
  max-width 960px
  h1#post-title
    font-weight 800
    text-align center
    font-size 5em
    color text_color
  h1, h2, h3
    font-family 'Fjalla One',serif
    color #b58900
  article
    background-color white
    padding 2% 5% 2% 5%
    @extend .card-shadow
  p
    line-height 1.5em
  img
    border-radius 3px
    display block
    margin auto
    text-align center
    @extend .card-shadow    

@media (min-width sm_size)
  .post
    p
      line-height 2em
